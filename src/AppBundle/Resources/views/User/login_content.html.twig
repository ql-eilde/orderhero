<body class="text-center">

    <form class="form-signin" action="{{ path('login') }}" method="post">
        <h1 class="h1">Order Hero</h1>
        <h4 class="h4 mb-3 font-weight-light">Connectez-vous</h4>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="username" class="sr-only">Nom d'utilisateur</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Nom d'utilisateur" required autofocus>

        <label for="password" class="sr-only">Mot de passe</label>
        <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe" required>

        <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" type="submit">Connexion</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </form>

</body>